<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <form method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <input type="hidden" name="userid" value="<%= user.id %>" />
        <div class="row my-5 gx-5">
          <div class="col-md-10">
            <div class="row mb-3">
              <label class="col-sm-1 col-form-label">Fullname</label>
              <div class="col-sm-11">
                <input
                  type="text"
                  class="form-control"
                 
                  name="fullname"
                  value="<%= user.fullname %>"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label  class="col-sm-1 col-form-label"
                >email</label
              >
              <div class="col-sm-11">
                <input  name="email" class="form-control"  value="<%= user.email %>">
</input
                >
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-1 col-form-label">roles</label>
              <div class="col-sm-11">
               <% roles.forEach(role => { %>
                <div class="form-check">
                  <input id="role_<%= role.id %>" class="form-check-input" type="checkbox" name="roles[]" value="<%= role.id %>" <%= user.roles.some(rol => rol.id == role.id) ? "checked":"" %>>
                  <label class="form-check-label" for="role_<%= role.id %>"><%= role.rolename %></label>
                </div>
               <% }) %>
              </div>
            </div>
    
           
            <div class="row mb-3">
              <div class="col-sm-11 offset-sm-1">
                <button type="submit" class="btn btn-primary">Kaydet</button>
              </div>
            </div>
          </div>
     
        </div>
      </form>
    </div>

    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
    <script>
      ClassicEditor.create(document.querySelector("#editor")).catch((error) => {
        console.error(error);
      });
    </script>
  </body>
</html>
